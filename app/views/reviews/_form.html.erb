<%= simple_form_for [@restaurant, @review] do |f| %>
  <%= f.input :content, label: 'Your Review', input_html: { class: 'form-group' }  %>
  <%= f.input :rating, label: 'Your Rating (0 - 5)', error: 'Rating is mandatory, please specify one from 0 to 5 stars' %>
  <%= f.button :submit, class: 'btn' %>
<% end %>
