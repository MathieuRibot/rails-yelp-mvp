<div class="container">
  <div class="header-2">
    <h1>Add a new Review for <%= @restaurant.name %></h1>
    <p><%= link_to restaurant_path(@restaurant) do %><i class="fas fa-undo-alt"><span>Back to <%= @restaurant.name %></span></i><% end %></p>
  </div>
</div>

<div class="container">
  <div class="form">
    <%= render 'form', review: @review %>
  </div>
</div>

<div class="footer">
    <%= link_to 'Back to Restaurants List', restaurants_path, :class => 'btn btn-danger btn-sm' %>
  </div>
