<div class="container">
  <div class="header">
    <h1>Welcome to Yelp!</h1>
    <%= image_tag("yelp_logo.png", :alt => "logo", :class => "header-logo") %>
  </div>
</div>

<div class="container">
  <div class="list">
    <ul class="list-group">
      <% @restaurants.each do |restaurant| %>
        <li><%= link_to restaurant_path(restaurant) do %><i class="far fa-eye" aria-hidden="true"><span><%= restaurant.name %></span></i><% end %></li>
      <% end %>
    </ul>
  </div>
</div>

<div class="container">
  <div class="footer">
    <%= link_to 'Add a Restaurant', new_restaurant_path, :class => 'btn btn-danger btn-sm' %>
  </div>
</div>
